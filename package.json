{
  "name": "subscriber",
  "version": "1.0.0",
  "private": true,
  "description": "Subscription tracking application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:push": "pnpm --filter api db:push",
    "db:generate": "pnpm --filter api db:generate",
    "db:studio": "pnpm --filter api db:studio",
    "db:seed": "pnpm --filter api db:seed",
    "clean": "turbo run clean && rm -rf node_modules",
    "postinstall": "prisma generate"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@azure/msal-node": "^3.8.4",
    "@prisma/client": "^6.2.0",
    "@supabase/supabase-js": "^2.47.0",
    "@vercel/node": "^5.5.16",
    "googleapis": "^170.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.2.0",
    "tsx": "^4.19.2",
    "zod": "^3.24.1"
  }
}
